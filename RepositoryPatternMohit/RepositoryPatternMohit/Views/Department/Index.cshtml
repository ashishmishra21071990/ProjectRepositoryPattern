@model IEnumerable<RepositoryPatternMohit.Models.Department>

@{
    ViewData["Title"] = "Index";
}

@Html.Raw(TempData["insert"])
@Html.Raw(TempData["update"])
@Html.Raw(TempData["delete"])

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.DName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.DName)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Did">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Did">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Did" onclick="return confirm('Are you sure you want to Delete this dept');">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
